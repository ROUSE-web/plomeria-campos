---
import type { CollectionEntry } from "astro:content";
import Image from "@components/ui/images/Image.astro";

const { blog } = Astro.props;

interface Props {
    blog: CollectionEntry<"posts">;
}
---

<a
    class="group relative block rounded-xl outline-none ring-zinc-500 transition duration-500 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none"
    href={`/services/${blog.slug}/`}
    data-astro-prefetch="false"
>
    <div
        class="relative w-full flex-shrink-0 overflow-hidden rounded-xl before:absolute before:inset-x-0 before:z-[1] before:size-full before:bg-gradient-to-t before:from-neutral-900/[.7]"
    >
        <Image
            class="w-full h-full sm:h-[220px] md:h-[240px] object-cover rounded-xl transition duration-500 ease-in-out group-hover:scale-105 group-hover:brightness-50"
            src={blog.data.banner}
            alt={blog.data.title}
            draggable="false"
            loading="eager"
            format="avif"
            width="800"
            height="460"
        />
        <div
            class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100 z-10"
        >
            <p class="text-xl font-bold text-white xl:text-2xl">
                {blog.data.title}
            </p>
        </div>
    </div>
    <h3
        class="mt-2 text-xl font-bold text-neutral-800 group-hover:text-[#274e86] dark:text-neutral-200 dark:group-hover:text-[#80cce2] xl:text-2xl"
    >
        {blog.data.title}
    </h3>
</a>
