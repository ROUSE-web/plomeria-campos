---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE } from "@/config";
import { Image } from "astro:assets";
import contacto from "@images/contact.png";

const description = `Contáctanos para más información sobre nuestros servicios.`;
const URL = Astro.url.href;
---

<BaseLayout
    title="Contáctanos"
    description={description}
    structuredData={{
        "@context": "https://schema.org",
        "@type": "WebPage",
        inLanguage: "es-BO",
        "@id": URL,
        url: URL,
        name: `Contáctanos - ${SITE.title}`,
        description: description,
        isPartOf: {
            "@type": "WebSite",
            url: SITE.url,
            name: SITE.title,
            description: SITE.description,
        },
    }}
>
    <section
        class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
    >
        <div class="text-center mb-10">
            <h2
                class="text-2xl font-bold text-[#274e86] dark:text-neutral-200 md:text-3xl lg:text-4xl"
            >
                CONTÁCTANOS
            </h2>
            <p class="mt-2 text-lg text-neutral-600 dark:text-neutral-300">
                Envíanos tu consulta o si quieres una cotización sobre nuestros
                servicios. ¡No dudes en contactarnos!
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Información de contacto -->
            <div class="bg-white dark:bg-[#0a1422] p-6 rounded-lg shadow-lg">
                <h3
                    class="text-2xl font-bold text-[#274e86] dark:text-neutral-200 mb-4"
                >
                    Información de contacto
                </h3>
                <div class="grid gap-4">
                    <div class="grid gap-2">
                        <p
                            class="text-lg text-pretty font-bold text-[#274e86] dark:text-neutral-200"
                        >
                            Dirección
                        </p>
                        <p
                            class="text-lg text-pretty text-neutral-800 dark:text-neutral-200"
                        >
                            Somos de Cochabamba, Bolivia.
                        </p>
                    </div>
                    <div class="grid gap-2">
                        <p
                            class="text-lg text-pretty font-bold text-[#274e86] dark:text-neutral-200"
                        >
                            Teléfono
                        </p>
                        <a
                            class="flex items-center gap-2"
                            href="https://wa.me/59178300509/?text=Hola%20Plomería%20Campos%2C%20me%20gustaría%20cotizar%20un%20servicio"
                        >
                            <svg
                                class="mt-1 flex-shrink-0 size-6 text-neutral-800 dark:text-neutral-200"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    fill="currentColor"
                                    fill-rule="evenodd"
                                    d="M12 4a8 8 0 0 0-6.895 12.06l.569.718-.697 2.359 2.32-.648.379.243A8 8 0 1 0 12 4ZM2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10a9.96 9.96 0 0 1-5.016-1.347l-4.948 1.382 1.426-4.829-.006-.007-.033-.055A9.958 9.958 0 0 1 2 12Z"
                                    clip-rule="evenodd"></path>
                                <path
                                    fill="currentColor"
                                    d="M16.735 13.492c-.038-.018-1.497-.736-1.756-.83a1.008 1.008 0 0 0-.34-.075c-.196 0-.362.098-.49.291-.146.217-.587.732-.723.886-.018.02-.042.045-.057.045-.013 0-.239-.093-.307-.123-1.564-.68-2.751-2.313-2.914-2.589-.023-.04-.024-.057-.024-.057.005-.021.058-.074.085-.101.08-.079.166-.182.249-.283l.117-.14c.121-.14.175-.25.237-.375l.033-.066a.68.68 0 0 0-.02-.64c-.034-.069-.65-1.555-.715-1.711-.158-.377-.366-.552-.655-.552-.027 0 0 0-.112.005-.137.005-.883.104-1.213.311-.35.22-.94.924-.94 2.16 0 1.112.705 2.162 1.008 2.561l.041.06c1.161 1.695 2.608 2.951 4.074 3.537 1.412.564 2.081.63 2.461.63.16 0 .288-.013.4-.024l.072-.007c.488-.043 1.56-.599 1.804-1.276.192-.534.243-1.117.115-1.329-.088-.144-.239-.216-.43-.308Z"
                                ></path>
                            </svg>
                            <p
                                class="text-lg text-pretty text-neutral-800 dark:text-neutral-200"
                            >
                                (+591) 78300509
                            </p>
                        </a>
                    </div>
                    <div class="grid gap-2">
                        <p
                            class="text-lg text-pretty font-bold text-[#274e86] dark:text-neutral-200"
                        >
                            Correo Electrónico
                        </p>
                        <a
                            class="flex items-center gap-2"
                            href="mailto:serviplom29@gmail.com"
                        >
                            <svg
                                class="mt-1 flex-shrink-0 size-5 text-neutral-800 dark:text-neutral-200"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path
                                    d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
                                ></path><path
                                    d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"
                                ></path></svg
                            >
                            <p
                                class="text-lg text-pretty text-neutral-800 dark:text-neutral-200"
                            >
                                serviplom29@ejemplo.com
                            </p>
                        </a>
                    </div>
                    <div class="grid gap-2">
                        <p
                            class="text-lg text-pretty font-bold text-[#274e86] dark:text-neutral-200"
                        >
                            Horario de atención
                        </p>
                        <p
                            class="text-lg text-pretty text-neutral-800 dark:text-neutral-200"
                        >
                            Lunes a Viernes: 8:00 AM - 6:00 PM
                        </p>
                    </div>
                </div>
            </div>

            <div class="hidden md:block">
                <!-- imagen -->
                <div class="relative flex justify-center">
                    <Image
                        class="p-0 w-full h-full object-cover rounded-tl-sm rounded-tr-sm lg:p-10"
                        src={contacto}
                        alt="contacto"
                        draggable="false"
                        format="avif"
                        loading="lazy"
                        inferSize={true}
                    />
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
