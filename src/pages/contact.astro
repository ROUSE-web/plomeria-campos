---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE } from "@/config";

const description = `Contáctanos para más información sobre nuestros servicios.`;
const URL = Astro.url.href;
---

<BaseLayout
    title="Contáctanos"
    description={description}
    structuredData={{
        "@context": "https://schema.org",
        "@type": "WebPage",
        inLanguage: "es-BO",
        "@id": URL,
        url: URL,
        name: `Contáctanos - ${SITE.title}`,
        description: description,
        isPartOf: {
            "@type": "WebSite",
            url: SITE.url,
            name: SITE.title,
            description: SITE.description,
        },
    }}
>
    <section
        class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
    >
        <div class="text-center mb-10">
            <h2
                class="text-4xl font-bold text-[#274e86] dark:text-neutral-200 md:text-5xl"
            >
                Contáctanos
            </h2>
            <p class="mt-2 text-lg text-neutral-600 dark:text-neutral-400">
                Si tienes alguna consulta o necesitas más información sobre
                nuestros servicios, no dudes en contactarnos.
            </p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Información de contacto -->
